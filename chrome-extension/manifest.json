{
    "manifest_version": 3,
    "name": "Diktalo - AI Meeting Recorder",
    "version": "0.2.1",
    "description": "Graba y transcribe reuniones de Google Meet, Zoom y m√°s",
    "permissions": [
        "tabCapture",
        "storage",
        "activeTab",
        "scripting",
        "offscreen"
    ],
    "host_permissions": [
        "https://www.diktalo.com/*",
        "https://diktalo.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/diktalo.png",
            "48": "icons/diktalo.png",
            "128": "icons/diktalo.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/diktalo.png",
        "48": "icons/diktalo.png",
        "128": "icons/diktalo.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}